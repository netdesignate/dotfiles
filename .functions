function myip(){ dig TXT +short o-o.myaddr.l.google.com @ns1.google.com | sed 's/"//g' }
function dug() { dig +short -x $(dig +short $1) }

function histgrep() {
  local n_lines=20
  if [[ "$1" =~ ^[0-9]*$ ]]; then
    n_lines="$1"
    shift
  fi
  grep --with-filename --line-number "$@" ~/.history | tail -n "$n_lines"
}

